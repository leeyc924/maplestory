{
  "formatter": {
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 80
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "recommended": false
      }
    }
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "files": {
    "includes": [
      "**/*.{js,jsx,ts,tsx,json,css,md}",
      "!node_modules",
      "!.next",
      "!dist",
      "!build",
      "!coverage",
      "!.turbo",
      "!out"
    ]
  },
  "$schema": "./node_modules/@biomejs/biome/configuration_schema.json"
}
